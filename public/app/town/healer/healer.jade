div(ng-controller="healerCtrl")
   ul.nav.nav-pills
      li.active
         a.btn(ng-click="fullHeal()") Full Heal
            span.badge {{fullHealCost}} g
   ul.nav.nav-tabs
      li
         .btn.btn-primary(ng-click="sortByClass('health potion')") Health Potions
      li
         .btn.btn-primary.disabled(ng-click="sortByClass('mana potion')") Mana Potions

   h4 Healing costs 3gold
   input(ng-model="healAmount")
   .btn.btn-success(ng-click="heal(healAmount)") Heal
   span Healing will cost: {{healAmount * 4}}
   img(src="pictures/symbols/gold.png")

   div(ng-include="'partials/town/itemTable'")