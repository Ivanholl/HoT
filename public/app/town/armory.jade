div(ng-controller="armoryCtrl")
   ul.nav.nav-tabs
      li.active
         .btn.btn-primary(ng-click="sortByType('helm')") Helms
      li
         .btn.btn-primary(ng-click="sortByType('chest')") Chest
      li
         .btn.btn-primary(ng-click="sortByType('pants')") Leggings
      li
         .btn.btn-primary(ng-click="sortByType('boots')") Boots
      li
         .btn.btn-primary(ng-click="sortByType('gloves')") Gloves

   div(ng-if="type")
      table.table.table-striped.table-hover
         thead
            th.item Item
            th(style="float:right;") Price
         tbody
            tr(ng-repeat="item in items")
               td.item {{item.title}}
                  .itemInfo
                     h4.text-primary {{item.title}}
                     p.text-warning {{item.type}}
                     span(ng-repeat="bonus in item.bonus") {{bonus}} +

               td(style="float:right;") {{item.price}}
               td.btn-info(ng-click="buy(item)") buy