.inventory(ng-controller="inventoryCtrl")
   .itemList
      h2 Inventory
      span inventory weight {{hero.weight}}/{{hero.str}}
      span(ng-if="herp.str-hero.weight >= 3") 3 str left
      table.table.table-striped.table-hover
         thead
            th Item
            th(style="float:right;") Weight
         tbody
            tr(ng-repeat="item in inventory")
               td.item(ng-mouseover="tooltip=true; tooltipItem = item" ng-mouseleave="tooltip=false") {{item.title}}
                  .toolTip(ng-if="tooltip" ng-include="'partials/tooltips/itemTooltip.jade'")
               td(style="float:right;") {{item.weight}}
               td.btn-info.equipBtn(ng-click="equip(item)") equip

   .equipped
      img(src="pictures/inventory.jpg" style="visibility: hidden")
      .item.helm
         img(src="{{hero.equipment[0].pic}}" ng-mouseover="showhelm=true; tooltipItem = hero.equipment[0]" ng-mouseleave="showhelm=false")
         .toolTip(ng-if="showhelm" ng-include="'partials/tooltips/itemTooltip.jade'")
         //.btn.btn-info(ng-click="unequip(hero.equipment[0])") unequip
         
