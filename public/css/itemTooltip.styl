.itemTooltip
  position absolute
  border 2px solid #a7a7ad
  border-radius 10px
  padding 3px
  background-color rgba(10,0,5,0.6)
  text-align left
  text-shadow 0 1px 0 rgba(0,0,0,1)

.itemTitle
  font-weight 700
  font-size 15px
  display table
  float left

.itemType
  font-weight normal
  font-size 12px
  display table
  float left

.itemPic
  display table
  float left