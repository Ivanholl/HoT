.itemTooltip
  position absolute
  border 2px solid #a7a7ad
  border-radius 10px
  padding 3px
  background-color rgba(10,0,5,0.6)
  text-align left
  text-shadow 0 1px 0 rgba(0,0,0,1)
  width 200px

.itemTitle
  position relative
  font-weight 700
  font-size 18px
  float left
  display inline-block

.itemType
  position relative
  font-weight normal
  font-size 12px
  float left
  display inline-block

.itemPic
  position relative
  top -8px
  left -8px
  float left
  display inline-block
  margin 3px

.bonusList
  position relative
  font-size 12px
  font-weight normal
  display inline-block
  float left
