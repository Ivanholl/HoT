.itemTooltip
  position absolute
  border 2px solid #a7a7ad
  border-radius 10px
  padding 3px
  background-color rgba(10,0,5,0.6)
  text-align left
  text-shadow 0 1px 0 rgba(0,0,0,1)
  display inline-block
  width 250px
  font-size 15px
  font-weight normal

#itemTitle
  position relative
  font-weight 700
  font-size 18px
  float right
  display inline-block
  width 155px
  box-shadow none

.itemType
  font-weight normal
  font-size 13px
  float left
  display inline-block
  font-style italic

.itemClass
  font-weight normal
  font-size 12px
  float right
  display inline-block
  font-style italic

.itemWeight
  text-align left

.itemPic
  position relative
  top -8px
  left -8px
  float left
  display inline-block
  margin 1px
  width 80px
  height 105px
  border-radius 10px
  background-size 100% 100%

.bonusList
  margin-top 22px

.common
  color  #d3d3d3
  box-shadow 0 0 14px 7px rgba(211,211,211,0.80) inset

.rare
  color dodgerblue
  box-shadow 0 0 14px 7px rgba(30,140,255,0.80) inset

.epic
  color purple
  box-shadow 0 0 14px 7px rgba(128,0,128,0.80) inset

.legendary
  color #ff8c00
  box-shadow 0 0 14px 7px rgba(255,140,0,0.80) inset

.set
  color darkgreen
  box-shadow 0 0 14px 7px rgba(0,100,0,0.80) inset

.unique
  color darkred
  box-shadow 0 0 14px 7px rgba(139,0,0,0.80) inset

.quest
  color #ffff00
  box-shadow 0 0 14px 7px rgba(255,255,0,0.80) inset