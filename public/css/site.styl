body
  //padding-top 80px
  maring 0px
  //padding 0px
  background-image url("/pictures/background.png")
  //background-size cover

section
  margin-top 40px

.navbar-right .navbar-form
  input
    margin-right 10px
  a.btn
    margin-left 10px

.toast-top-right
  top 70px

footer
  padding-left 120px
  padding-right 120px
  p
    border-top 3px solid #808080
    padding-top 10px

.news
  background-color rgb(72,85,99)
  padding-left 70px
  padding-right 70px
  padding-bottom 50px
  h2
    text-align center
    padding-top 10px
    border-top 1px solid #808080

.logo
  margin 0
  padding 0
  width 165px
  height 40px

#container
  //margin-top 40px
  width 1000px
  //left -50%
  margin-left calc(50% - 500px)
  //margin 0 auto
  //margin-top 40px
  box-shadow 0 0 17px 3px rgba(0,0,0,0.56)
  background-color rgb(78,93,108)
  border-left 3px solid #808080
  border-right 3px solid #808080
  display inline-block

.quickAccessBar/**********************QUICK ACCESS***********************/
  float right
  margin 5px
  display inline-block
  list-style none

.quickAccessWindow
  padding 5px
  position absolute
  margin-top 5px
  left 50%
  z-index 3
  box-shadow 0 0 17px 3px rgba(0,0,0,0.56)

#map/**************************************************map*********************/
  width 520px
  position relative
  background-image url('/pictures/map.jpg')
  background-repeat no-repeat
  box-shadow: 0 0 17px 13px rgba(0,0,0,0.80) inset
  float left

.round-button
  width 15px
  height 15px
  line-height 15px
  border 2px solid black
  border-radius 50%
  color #f5f5f5
  text-align center
  text-decoration none
  background #ffff00
  box-shadow 0 0 3px gray
  font-size 10px
  font-weight bold
  position absolute

.round-button:hover
  background #262626

.town
  position absolute
  background yellowgreen
  width 20px
  height 20px
  text-decoration none

.orange
  background-color orange

.selectedZone
  background-color white

.curZone
  background red

.legend
  position absolute
  display inline-block
  margin-left 5px

.legendText
  margin-left 25px

.legendTown
  background-color yellowgreen

.zone-info
  font-weight 600
  width 450px
  float right
  //display inline-block
  box-shadow: 0 0 17px 3px rgba(0,0,0,0.56)

.battle-info/********************************BATTLE************/
  height 250px

.minion-info
  text-align right
  display inline-block
  float right

.player-info
  text-align left
  display inline-block
  float left

#battleLog
  margin 50px
  height 200px
  overflow-y auto
  text-align center

#buildingList /*******************************************TOWN*****/
  display inline-block
  list-style none
  position absolute
  bottom 0

#town
  width 990px
  //margin-top 40px
  height 800px
  background-size 100% 100%

/**********************************************HERO CREATE*********/
.raceOption
    width 100px
    height 700px
    display inline-block
    float left
    box-shadow: 0 0 17px 13px rgba(0,0,0,0.80) inset
    background-repeat no-repeat
    background-position 50% 0%
    position relative

.orc
    background-image url('/pictures/heroCreate/orc.jpg')
.human
    background-image url('/pictures/heroCreate/human.jpg')
.elf
    background-image url('/pictures/heroCreate/elf.jpg')
.dwarf
    background-image url('/pictures/heroCreate/dwarf.jpg')
.undead
    background-image url('/pictures/heroCreate/undead.jpg')

.raceInfo
  width 100%
  position absolute
  bottom 2px
  font-weight 800

.chooseName
  height 700px
  background-repeat no-repeat
  background-position 50% 0%

.selectedRace
    width 550px
    background-position initial

.stats
  margin 10px
  float left