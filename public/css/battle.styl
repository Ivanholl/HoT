#battle
    background-size 100% 100%
    position relative
    height 700px

.battle-info
    height 250px
    width 100%

.minion-info
    display inline-block
    float right
    text-align right
    position absolute
    top 15px
    right 55px

.player-info
    text-align left
    position absolute
    top 15px
    left 15px

.statList
    margin-left 0
    list-style none

.backgroundColor
    background-color rgba(10,0,5,0.6)

.avatar
    height 75px
    width 75px
    border 1px solid black
    border-radius 50%

.vs
    height 100px
    width 100px
    background-image url('/pictures/vs.png')
    background-size 100% 100%

.enemyBarList
    position absolute
    list-style none
    top 15px
    right 75px
    .mpBar
        float right

.heroBarList
    position absolute
    list-style none
    top 15px
    left 75px

.statBar
    border 1px solid black
    border-radius 7px
    width 200px
    margin 0

.statList .statBar
    width 100px

.mpBar
    width 150px

.enemyPic
    height 200px
    width 200px

.turnCount
    color #999
    filter drop-shadow(1px 0px 4px red)
    
.logDmg
    color darkred
    filter drop-shadow(0px 0px 2px yellow)

.actionBar
    position absolute
    bottom 0

.actionBarSlot
    width 80px
    height 80px
    box-shadow 0 0 17px 3px rgba(0,0,0,0.80) inset
    background-size 100% 100%
    display inline-block

    .dropdown-toggle
        width 100%
        height 100%
    .action
        color white
        filter drop-shadow(0px 0px 2px gray)

#escape
    background-image url('/pictures/icons/escape.png')
#attack
    background-image url('/pictures/icons/attack.png')
#defend
    background-image url('/pictures/icons/defend.png')
#magic
    background-image url('/pictures/icons/magic.png')
#item
    background-image url('/pictures/icons/item.png')

#battleLog
    width 400px
    height 200px
    overflow-y scroll
    text-align center
    background-color rgba(0,0,0,0.5)
    position absolute
    right 0
    bottom 0
    border-radius 10px 0 0 0

#battleLog::-webkit-scrollbar
    width 12px

#battleLog::-webkit-scrollbar-track
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)
    border-radius 10px


#battleLog::-webkit-scrollbar-thumb
    border-radius 10px
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.5)

